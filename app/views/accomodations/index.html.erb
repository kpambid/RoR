<p id="notice"><%= notice %></p>

<h1>Hosts</h1>
<div class="row">
  <div class="col-md-5">
    <%= form_tag(host_accomodations_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
    <%= submit_tag "Search" %>
    <% end %>

<table class="table table-striped">
 <thead>
   <tr>
     <th>Name</th>
     <th>Location</th>
     <th>Description</th>
     <th>Status</th>
     <th>Owner</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @accomodations.each do |accomodation| %>
   <% if @accomodation.present? %>
     <tr>
       <td><%= accomodation.name %></td>
       <td><%= accomodation.location %></td>
       <td><%= accomodation.description %></td>
       <td><%= accomodation.status %></td>
       <td><%= accomodation.host.email%></td>
     </tr>
     <% else %>
       <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
     <% end %>
   <% end %>
 </tbody>
</table>
</div>
</div>

<br>

<%= paginate @accomodations %>
